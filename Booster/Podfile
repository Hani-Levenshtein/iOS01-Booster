# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

use_frameworks!

def mainPods
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxGesture'
end

def testPods
  pod 'RxTest'
  pod 'RxBlocking'
end

target 'Booster' do
  mainPods
end

target 'HomeTests' do
  mainPods
  testPods
end

target 'StatisticsTests' do
  mainPods
  testPods
end

target 'TrackingProgressTests' do
  mainPods
  testPods
end

target 'UserTests' do
  mainPods
  testPods
end

target 'FeedTests' do
  mainPods
  testPods
end
